{
    "name": "sdpmlab/codeigniter4-roadrunner",
    "description": "Make Codeigniter4 work on Roadrunner Server.",
    "keywords": [
		"codeigniter",
		"codeigniter4",
		"Roadrunner"
	],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MonkenWu",
            "homepage": "https://github.com/monkenWu"
        },
        {
            "name": "SDPM-lab",
            "homepage": "https://github.com/SDPM-lab"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.1.9",
        "spiral/roadrunner": "^2",
        "spiral/dumper": "^2.8",
        "laminas/laminas-diactoros": "^2.8",
        "nyholm/psr7": "^1.4"
    },
    "autoload": {
		"psr-4": {
			"SDPMlab\\Ci4Roadrunner\\": "src/"
		}
	},
    "require-dev": {
        "codeigniter4/devkit": "^1.0",
        "rector/rector": "0.12.16"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
